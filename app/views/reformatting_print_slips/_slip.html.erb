  <li><%= image_tag 'check-box-empty.gif' %> Withdraw</li>
  <li><%= image_tag 'check-box-empty.gif' %> Digital</li>
  <li><%= image_tag 'check-box-empty.gif' %> Digital and Paper Output</li>
  <li><%= image_tag 'check-box-empty.gif' %> Microfilm ND</li>
  <li><%= image_tag 'check-box-empty.gif' %> Digital Link</li>
  <li><%= image_tag 'check-box-empty.gif' %> Purchase Reprint</li>
  <li><%= image_tag 'check-box-empty.gif' %> Purchase Microfilm</li>
  <li><%= image_tag 'check-box-empty.gif' %> Box</li>
  <li><%= image_tag 'check-box-empty.gif' %> Return to Shelf</li>
