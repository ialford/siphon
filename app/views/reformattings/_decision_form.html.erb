<% content_for(:content_title_links) do %>
  <%= link_to 'Print Book Slip', reformattings_print_slips_path(ids: book_form.id), class: 'btn btn-success', target: 'blank' %>
<% end %>
<h3>Selector Descision</h3>
<p class="form-help">
  Record the Selector Decision
</p>
<%= simple_form_for book_form, :url => reformatting_path(book_form.id), :method => 'put' do | f | %>

  <h4>Preservation of Surrogate</h4>
  <%= f.input :digital_and_paper_output, as: :boolean, inline_label: 'Digital and Print Reproduction', label:false %>
  <%= f.input :digital, as: :boolean, inline_label: 'Digitize only', label:false %>
  <%= f.input :no_action, as: :boolean, inline_label: 'No Action', label:false %>

  <h4>Preservation of the Original</h4>
  <%= f.input :retain, as: :boolean, inline_label: 'Retain', label:false %>
  <%= f.input :retain_and_transfer, as: :boolean, inline_label: 'Retain & Transfer to Special Collections', label:false %>
  <%= f.input :withdraw, as: :boolean, inline_label: 'Withdraw', label:false %>

  <%= f.input :notes_from_selector, as: :text %>

  <div class="form-actions">
    <%= f.button :submit, "Decisioned", :class => 'btn-primary' %>
  </div>
<% end %>
